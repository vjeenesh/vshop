<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="mt-4">
        <% if (products.length > 0) { %>
            <div class="container-fluid">
                <div class="row justify-content-around text-center">
                <% for (let product of products) { %>
                        <div class="card mb-5 col-6 col-md-4" style="width: 18rem;">
                            <img src="/<%= product.imageUrl %>" class="card-img-top pt-2" alt="<%= product.title %>">
                            <div class="card-body">
                              <h5 class="card-title"><%= product.title %></h5>
                              <p class="card-text"><%= product.description %></p>
                              <h6 class="mb-3">$<%= product.price %></h6>
                              <a href="/products/<%= product._id %>" class="btn btn-outline-primary">Details</a>
                              <% if(isLoggedIn) { %>
                                <%- include('../includes/add-to-cart.ejs', {productId: product._id }) %>
                              <% } %>
                            </div>
                            <div class="card-footer bg-white">
                              <small class="text-body-secondary">Product By <%= product.userId.username %></small>
                            </div>                        
                          </div>
                <% }  %>
            </div>
            </div>
            
        <% } %>
        <% if (products.length > 0) { %>
          <%- include('../includes/pagination.ejs', {pagination: pagination }) %>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
