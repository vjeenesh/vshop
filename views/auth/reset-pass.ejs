    <main>
        <div class="container mt-2 ">
            <% if(flashMessage) { %>
                <div class="alert alert-danger text-center" role="alert">
                    <%= flashMessage %>
                  </div>
            <% } %>
            <div class="row justify-content-center">
                <form class="col-md-6" action="/reset" method="post">
                    <div class="mb-3">
