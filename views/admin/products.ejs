<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (products.length > 0) { %>
            <div class="container-fluid">
                <div class="mt-3 row justify-content-around text-center">
                <% for (let product of products) { %>
                        <div class="card mb-5 col-6 col-md-4" style="width: 18rem;">
                            <img src="/<%= product.imageUrl %>" class="card-img-top pt-2" alt="<%= product.title %>">
                            <div class="card-body">
                              <h5 class="card-title"><%= product.title %></h5>
                              <p class="card-text"><%= product.description %></p>
                              <h6 class="mb-3">$<%= product.price %></h6>
                                <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn btn-outline-primary">Edit</a>
                                <div class="d-inline-block" id="productActions">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button type="button" onclick="deleteProduct(this)" class="btn btn-outline-danger">Delete</button>
                                </div>
                            </div>
                          </div>
                <% }  %>
            </div>
            </div>
            
            <% } else { %>
                <div class="container-fluid text-center mt-3">
                    <h1>No Products Added!</h1>
                <h5 class="mb-3">

                    <a class="icon-link icon-link-hover" style="--bs-icon-link-transform: translate3d(-.125rem, 0 , 0);" href="/admin/add-product">
                        <i class="bi bi-arrow-left"></i>
                        Add your Products
                      </a>
                  </h5>
                </div>
                
            <% } %>
    </main>
    <script src="/js/deleteProduct.js"></script>
    <%- include('../includes/end.ejs') %>
